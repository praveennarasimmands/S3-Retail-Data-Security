{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowAccessFromSpecificIP",
      "Effect": "Allow",
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::retail-transaction-data",
        "arn:aws:s3:::retail-transaction-data/*"
      ],
      "Condition": {
        "IpAddress": {
          "aws:SourceIp": "Public_IP_Address/32"
        }
      }
    },
    {
      "Sid": "RestrictAccessToFinanceTeam",
      "Effect": "Deny",
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::retail-transaction-data",
        "arn:aws:s3:::retail-transaction-data/*"
      ],
      "Condition": {
        "StringNotEquals": {
          "aws:PrincipalTag/role": "finance_team"
        }
      }
    }
  ]
}
