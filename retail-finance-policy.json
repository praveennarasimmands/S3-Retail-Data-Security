{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": "*",  
      "Action": [
        "s3:ListAllMyBuckets",  
        "s3:ListBucket",
        "s3:GetObject",
        "s3:PutObject"
      ],
      "Resource": [
        "arn:aws:s3:::*",
        "arn:aws:s3:::retail-transaction-data",
        "arn:aws:s3:::retail-transaction-data/*"
      ],
      "Condition": {
        "IpAddress": {
          "aws:SourceIp": "your_ip_address/32"  
        }
      }
    },
    {
      "Effect": "Deny",
      "Principal": "*",  
      "Action": "s3:*",  
      "Resource": [
        "arn:aws:s3:::retail-transaction-data",
        "arn:aws:s3:::retail-transaction-data/*"
      ],
      "Condition": {
        "StringNotEquals": {
          "aws:PrincipalTag/role": "finance_team"  
        }
      }
    }
  ]
}
