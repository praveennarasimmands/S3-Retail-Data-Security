{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetObject",
        "s3:PutObject"
      ],
      "Resource": "arn:aws:s3:::retail-transaction-data/*",
      "Condition": {
        "IpAddress": {
          "aws:SourceIp": "your_Public_IP_address/32"
        }
      }
    },
    {
      "Effect": "Deny",
      "Action": "s3:*",
      "Resource": "arn:aws:s3:::retail-transaction-data/*",
      "Condition": {
        "StringNotEquals": {
          "aws:PrincipalTag/Role": "finance_team"
        }
      }
    }
  ]
}
